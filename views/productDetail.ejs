              <h2 class="mb-3 text-center text-primary">Chi tiết sản phẩm</h2>
              <div class="card p-3">
                  <div class="card-body">
                    <div>
                      <div><strong>Tên sản phẩm:</strong> <%= product.name %></div>
                    </div>
                    <p></p>
                    <div class="mb-3">
                      <strong class="fw-bold">Mô tả:</strong>
                      <p></p>
                      <p class="text-muted" style="white-space: pre-line;"><%= product.description %></p>
                    </div>
                    <div>
                      <div><strong>Loại sản phẩm:</strong> <%= product.category ? product.category.name : "Chưa có danh mục" %></div>
                    </div>
                  </div>
                
              </div>
              
          
              <h4 class="mt-4 text-secondary">Biến thể</h4>
              <% if (product.variants.length > 0) { %>
                <div class="row">
                  <% product.variants.forEach(variant => { %>
                    <div class="col-md-6">
                      <div class="card variant-card p-3 mb-3">
                        <p><strong>Size:</strong> <%= variant.size %></p>
                        <p><strong>Màu:</strong> <%= variant.color %></p>
                        <p><strong>Giá nhập:</strong> <%= variant.importPrice %>đ</p>
                        <p><strong>Giá bán:</strong> <%= variant.salePrice %>đ</p>
                        <p><strong>Kho:</strong> <%= variant.stock %></p>
                        <% if (Array.isArray(variant.images) && variant.images.length > 0) { %>
                          <div class="d-flex flex-wrap">
                            <% variant.images.forEach(image => { %>
                              <img src="<%= image %>" alt="Ảnh biến thể" class="variant-thumbnail mb-2">
                            <% }) %>
                          </div>
                        <% } else { %>
                          <p class="text-muted">Không có ảnh</p>
                        <% } %>
                      </div>
                    </div>
                  <% }) %>
                </div>
              <% } else { %>
                <p class="text-muted">Không có biến thể nào.</p>
              <% } %>

              <h4 class="mt-4 text-secondary">Lịch sử thay đổi trạng thái</h4>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Trường</th>
                    <th>Hành động</th>
                    <th>Giá trị cũ</th>
                    <th>Giá trị mới</th>
                    <th>Thời gian</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (history.length > 0) { %>
                    <% history.slice().reverse().forEach(record => { %> <!-- Đảo ngược mảng -->
                      <tr>
                        <td><%= record.field %></td>
                        <td>
                          <span class="badge 
                            <% if (record.action === 'Thêm mới') { %> bg-success 
                            <% } else if (record.action === 'Cập nhật') { %> bg-warning text-dark
                            <% } else if (record.action === 'Xóa') { %> bg-danger 
                            <% } else if (record.action === 'Xóa ảnh') { %> bg-danger
                            <% } %>">
                            <%= record.action %>
                          </span>
                        </td>                        
                        <td><%= record.oldValue %></td>
                        <td><%= record.newValue %></td>
                        <td>
                          <%= record.changedAt ? new Date(record.changedAt).toLocaleString("vi-VN") : "Không xác định" %>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="5" class="text-muted text-center">Không có lịch sử thay đổi.</td>
                    </tr>
                  <% } %>                  
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </section>
