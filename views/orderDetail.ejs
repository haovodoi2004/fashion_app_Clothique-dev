        <div class="row">
          <div class="col-md-12">
            <h2 class="mb-3 text-center text-primary">Chi Tiết Đơn Hàng</h2>
            <div class="card p-4 shadow-sm">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-6">
                      <p><strong>ID Đơn Hàng:</strong> <%= order._id %></p>
                      <p><strong>Khách hàng:</strong> <%= order.shippingAddress.name %></p>
                      <p><strong>Số điện thoại:</strong> <%= order.shippingAddress.phoneNumber %></p>
                      <p><strong>Địa chỉ giao hàng:</strong> <%= order.shippingAddress.addressDetail %></p>
                      <%
                      const deliveryDate = order.expectedDeliveryTime
                          ? new Date(order.expectedDeliveryTime * 1000)
                          : null;
                      %>
              
                      <p><strong>Thời gian giao hàng dự kiến:</strong>
                          <%= deliveryDate
                              ? deliveryDate.toLocaleDateString('vi-VN', {
                                  weekday: 'long',
                                  day: '2-digit',
                                  month: '2-digit',
                                  year: 'numeric'
                              })
                              : "Chưa có"
                          %>
                      </p>
                  </div>
                  <div class="col-md-6">
                      <p>
                          <strong>Phương Thức Thanh Toán:</strong>
                          <span
                              class="badge"
                              style="background-color: <%= order.paymentMethod === 'MoMo' ? '#e91e63' : '#4CAF50' %>;
                                              color: #ffffff;
                                              padding: 5px 5px;
                                              border-radius: 5px;">
                              <%= order.paymentMethod %>
                          </span>
                      </p>
                      <p><strong>Trạng thái thanh toán:</strong>
                          <% if (order.paymentStatus === "Pending") { %>
                              <span class="badge badge-warning">Chưa thanh toán</span>
                          <% } else if (order.paymentStatus === "Paid") { %>
                              <span class="badge badge-success">Đã thanh toán</span>
                          <% } else if (order.paymentStatus === "Refunded") { %>
                              <span class="badge badge-danger">Đã hoàn tiền</span>
                          <% } else if (order.paymentStatus === "Cancelled") { %>
                              <span class="badge badge-secondary">Đã hủy</span>
                          <% } else { %>
                              <span class="badge badge-secondary">Không xác định</span>
                          <% } %>
                      </p>
              
                      <p><strong>Trạng thái đơn hàng:</strong>
                          <% if (order.orderStatus === "Pending") { %>
                              <span class="badge status-Pending">Chờ lấy hàng</span>
                          <% } else if (order.orderStatus === "Processing") { %>
                              <span class="badge status-Processing">Đang xử lý</span>
                          <% } else if (order.orderStatus === "Shipped") { %>
                              <span class="badge status-Shipped">Đang giao hàng</span>
                          <% } else if (order.orderStatus === "Delivered") { %>
                              <span class="badge status-Delivered">Đã giao hàng</span>
                          <% } else if (order.orderStatus === "Completed") { %>
                              <span class="badge status-Completed">Đã nhận hàng</span>
                          <% } else if (order.orderStatus === "Cancelled") { %>
                              <span class="badge status-Cancelled">Đã hủy</span>
                          <% } else { %>
                              <span class="badge status-Refunded">Không xác định</span>
                          <% } %>
                      </p>
              
                      <p><strong>Phí vận chuyển:</strong>
                          <%= Number(order.shippingFee).toLocaleString("vi-VN") %>đ
                      </p>
                      <p><strong>Giảm giá:</strong>
                          <%= Number(order.discountAmount).toLocaleString("vi-VN") %>đ
                      </p>
                      <p><strong>Tổng tiền:</strong>
                          <%= Number(order.totalAmount).toLocaleString("vi-VN") %>đ
                      </p>
                  </div>
              </div>         
              </div>
            </div>
    
            <h4 class="mt-4 text-secondary">Danh sách sản phẩm</h4>
            <% if (order.orderItems.length > 0) { %>
              <div class="row">
                <% order.orderItems.forEach(item => { %>
                  <div class="col-md-6">
                    <div class="card p-3 mb-3 shadow-sm">
                      <div class="row">
                        <!-- Ảnh sản phẩm hoặc ảnh biến thể -->
                        <div class="col-md-4 d-flex align-items-center">
                          <% if (item.variantId?.images?.length > 0) { %>
                            <img src="<%= item.variantId.images[0] %>" alt="Ảnh biến thể" class="img-fluid rounded">
                          <% } else { %>
                            <p class="text-muted">Không có ảnh</p>
                          <% } %>
                        </div>
    
                        <!-- Thông tin sản phẩm -->
                        <div class="col-md-8">
                          <h5><%= item.productId?.name || "Tên không có" %></h5>
                          <p><strong>Size:</strong> <%= item.variantId?.size || "N/A" %></p>
                          <p><strong>Màu:</strong> <%= item.variantId?.color || "N/A" %></p>
                          <p><strong>Số lượng:</strong> <%= item.quantity %></p>
                          <p><strong>Giá:</strong> <%= item.salePrice || "N/A" %>đ</p>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <p class="text-muted">Không có sản phẩm nào trong đơn hàng.</p>
            <% } %>

            <h4 class="mt-4 text-secondary">Lịch sử cập nhật trạng thái</h4>
            <td>
              <% if (order.history && order.history.length > 0) { %>
                <style>
                  .timeline {
                    position: relative;
                    margin-left: 20px;
                    padding-left: 20px;
                  }
              
                  .timeline-dot {
                    position: absolute;
                    left: -7px; /* căn giữa dot */
                    top: 6px;
                    width: 14px;
                    height: 14px;
                    border-radius: 50%;
                    z-index: 1;
                  }
              
                  /* Dot màu theo trạng thái */
                  .dot-Pending      { background-color: orange; }
                  .dot-Processing   { background-color: dodgerblue; }
                  .dot-Shipped      { background-color: mediumorchid; }
                  .dot-Delivered    { background-color: mediumseagreen; }
                  .dot-Cancelled    { background-color: crimson; }
                  .dot-Paid         { background-color: goldenrod; }
                  .dot-Refunded     { background-color: lightcoral; }  /* Thêm màu cho Refund */
                  .dot-Completed { background-color: #007bff; }
              
                  .timeline-content {
                    margin-left: 20px;
                  }
              
                  .status {
                    font-weight: bold;
                    display: inline-block;
                    padding: 4px 10px;
                    border-radius: 6px;
                    color: white;
                    margin-bottom: 4px;
                  }
              
                  .status-Pending      { background-color: orange; }
                  .status-Processing   { background-color: dodgerblue; }
                  .status-Shipped      { background-color: mediumorchid; }
                  .status-Delivered    { background-color: mediumseagreen; }
                  .status-Cancelled    { background-color: crimson; }
                  .status-Paid         { background-color: goldenrod; }
                  .status-Refunded     { background-color: lightcoral; }  /* Thêm màu cho Refund */
                  .status-Completed { background-color: #007bff; }
              
                  .timeline-content p {
                    margin: 4px 0;
                  }
              
                  .timeline-content small {
                    color: #888;
                    font-size: 12px;
                  }
                </style>
              
                <div class="timeline">
                  <% order.history.slice().reverse().forEach((status) => { %>
                    <div class="timeline-item">
                      <div class="timeline-dot dot-<%= status.status %>"></div>
                      <div class="timeline-content">
                        <div class="status status-<%= status.status %>"><%= status.status %></div>
                        <p><%= status.description %></p>
                        <small>
                          <%= new Date(status.changedAt).toLocaleTimeString("vi-VN") %>
                          <%= new Date(status.changedAt).toLocaleDateString("vi-VN") %>
                          bởi <%= status.changedBy %>
                        </small>
                      </div>
                    </div>
                  <% }) %>
                </div>
              <% } else { %>
                <span class="text-muted">Không có lịch sử trạng thái</span>
              <% } %>
              
                                
            </td>            
            
