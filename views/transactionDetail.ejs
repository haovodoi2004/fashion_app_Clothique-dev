          <h2 class="mb-4">Chi Tiết Giao Dịch</h2>

          <div class="card">
            <div class="card-body">
              <p><strong>ID Giao Dịch:</strong>
                <%= transaction._id %>
              </p>
              <p><strong>ID Người Dùng:</strong>
                <%= transaction.userId ? transaction.userId._id : "Không có dữ liệu" %>
              </p>
              <p><strong>Tên Khách Hàng:</strong>
                <%= transaction.userId ? transaction.userId.name : "Không có dữ liệu" %>
              </p>
              <p>
                <strong>Số Điện Thoại:</strong>
                <%= transaction.orderId?.shippingAddress?.phoneNumber || "Không có dữ liệu" %>
              </p>
              <p>
                <strong>Phương Thức Thanh Toán:</strong>
                <span class="badge" style="background-color: <%= transaction.orderId.paymentMethod === 'MoMo' ? '#e91e63' : '#4CAF50' %>; 
                       color: #ffffff; 
                       padding: 5px 5px; 
                       border-radius: 5px;">
                  <%= transaction.orderId.paymentMethod %>
                </span>
              </p>
              <p><strong>Trạng Thái Thanh Toán:</strong>
                <% if (transaction.paymentStatus) { %>
                  <% if (transaction.paymentStatus==="Pending" ) { %>
                    <span class="badge bg-warning">Chờ thanh toán</span>
                    <% } else if (transaction.paymentStatus==="Processing" ) { %>
                      <span class="badge bg-info">Đang xử lý</span>
                      <% } else if (transaction.paymentStatus==="Paid" ) { %>
                        <span class="badge bg-success">Đã thanh toán</span>
                        <% } else if (transaction.paymentStatus==="Cancelled" ) { %>
                          <span class="badge bg-secondary">Đã hủy</span>
                        <% } else if (transaction.paymentStatus==="Refunded" ) { %>
                          <span class="badge bg-danger">Đã hoàn tiền</span>
                          <% } else if (transaction.paymentStatus==="Failed" ) { %>
                            <span class="badge bg-secondary">Thanh toán thất bại</span>
                            <% } else { %>
                              <span class="badge bg-secondary">Không xác định</span>
                              <% } %>
                                <% } else { %>
                                  <span class="text-muted">Không có dữ liệu</span>
                                  <% } %>
              </p>

              <p><strong>ID Đơn Hàng:</strong>
                <% if (transaction._id) { %>
                  <a href="/v1/dashboard/orders/view/<%= transaction.orderId._id %>" class="btn btn-link">
                    <%= transaction.orderId._id %>
                  </a>
                  <% } else { %>
                    <span class="text-muted">Không có đơn hàng liên quan</span>
                    <% } %>
              </p>
              <h3>Chi tiết đơn hàng</h3>
              <table class="table">
                <thead>
                  <tr>
                    <th>Sản phẩm</th>
                    <th>Size</th>
                    <th>Màu</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (transaction.orderId?.orderItems?.length > 0) { %>
                    <% transaction.orderId.orderItems.forEach(item => { %>
                      <tr>
                        <td><%= item.productId?.name || "Không có" %></td>
                        <td><%= item.variantId?.size || "Không có" %></td>
                        <td><%= item.variantId?.color || "Không có" %></td>
                        <td><%= item.quantity %></td>
                        <td><%= Number(item.salePrice).toLocaleString("vi-VN") %>đ</td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="5" class="text-muted text-center">Không có sản phẩm nào</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
              <div><strong>Phí vận chuyển:</strong> <%= Number(transaction.orderId.shippingFee).toLocaleString("vi-VN") %>đ</div>
              <div><strong>Giảm giá:</strong> <%= Number(transaction.orderId.discountAmount).toLocaleString("vi-VN") %>đ</div>
              <div><strong>Tổng:</strong> <%= Number(transaction.orderId.totalAmount).toLocaleString("vi-VN") %>đ</div>

            <h4 class="mt-4 text-secondary">Lịch sử cập nhật trạng thái</h4>
            <% if (transaction.history && transaction.history.length > 0) { %>
              <style>
                .timeline {
                  position: relative;
                }
            
                .timeline-item {
                  position: relative;
                  margin-bottom: 20px;
                }
            
                .timeline-dot {
                  position: absolute;
                  left: -7px;
                  top: 6px;
                  width: 14px;
                  height: 14px;
                  border-radius: 50%;
                  z-index: 1;
                }
            
                .dot-Paid { background-color: green; }
                .dot-Pending { background-color: orange; }
                .dot-Failed { background-color: red; }
                .dot-Cancelled { background-color: gray; }
                .dot-Refunded { background-color: blue; } /* 🌊 Thêm màu cho Refunded */
            
                .timeline-content {
                  margin-left: 20px;
                }
            
                .status {
                  font-weight: bold;
                  display: inline-block;
                  padding: 4px 10px;
                  border-radius: 6px;
                  color: white;
                  margin-bottom: 4px;
                }
            
                .status-Paid { background-color: green; }
                .status-Pending { background-color: orange; }
                .status-Failed { background-color: red; }
                .status-Cancelled { background-color: gray; }
                .status-Refunded { background-color: blue; } /* 🌊 Thêm màu cho Refunded */
            
                .timeline-content p {
                  margin: 4px 0;
                  color: #555;
                }
            
                .timeline-content small {
                  color: #888;
                  font-size: 12px;
                }
              </style>
            
              <div class="timeline">
                <% transaction.history.slice().reverse().forEach((record) => { %>
                  <div class="timeline-item">
                    <div class="timeline-dot dot-<%= record.status %>"></div>
                    <div class="timeline-content">
                      <div class="status status-<%= record.status %>"><%= translateStatus(record.status) %></div>
                      <% if (record.note) { %>
                        <p><%= record.note %></p>
                      <% } %>
                      <small><%= new Date(record.changedAt).toLocaleTimeString("vi-VN") %> 
                        <%= new Date(record.changedAt).toLocaleDateString("vi-VN") %></small>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <span class="text-muted">Không có lịch sử trạng thái</span>
            <% } %>
            
            
            
                  <a href="/v1/dashboard/transactions" class="btn btn-secondary mt-3">Quay Lại</a>
            </div>
          </div>
        </div>
      </section>




